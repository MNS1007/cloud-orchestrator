{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "functions": {
    "api/planner.py": {
      "maxDuration": 30
    },
    "api/guard.py": {
      "maxDuration": 30
    },
    "api/worker.py": {
      "maxDuration": 60
    }
  }
} 